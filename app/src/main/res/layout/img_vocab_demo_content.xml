<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <Button
        android:id="@+id/fruit_btn"
        android:text="Fruit"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_margin="30dp"
        android:drawableTop="@drawable/strawberry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@color/white"/>


    <Button
        android:id="@+id/animal_btn"

        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_margin="30dp"
        android:text="Animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fruit_btn" />

    <Button
        android:id="@+id/food_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="30dp"

        android:text="Food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animal_btn" />

    <Button
        android:id="@+id/drink_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="30dp"

        android:text="Drink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_btn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="30dp"

        android:text="Sport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drink_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>